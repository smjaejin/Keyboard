<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mclane.keyboard.MainActivity"
    android:background="@color/colorBackground">


    <Button
        android:id="@+id/button_gs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="G#"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/button_g"
        app:layout_constraintRight_toRightOf="@+id/button_g"
        app:layout_constraintTop_toBottomOf="@+id/button_g"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="E"
        app:layout_constraintLeft_toLeftOf="@+id/button_ds"
        app:layout_constraintRight_toRightOf="@+id/button_ds"
        app:layout_constraintTop_toBottomOf="@+id/button_ds"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="C"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/button_b"
        app:layout_constraintRight_toRightOf="@+id/button_b"
        app:layout_constraintTop_toBottomOf="@+id/button_b"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="A"
        app:layout_constraintRight_toLeftOf="@+id/button_cs"
        app:layout_constraintTop_toTopOf="@+id/button_cs"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button_f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:text="F"
        app:layout_constraintLeft_toRightOf="@+id/button_cs"
        app:layout_constraintTop_toTopOf="@+id/button_cs"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="B"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/button_as"
        app:layout_constraintRight_toRightOf="@+id/button_as"
        app:layout_constraintTop_toBottomOf="@+id/button_as"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button_as"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="A#"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/button_a"
        app:layout_constraintRight_toRightOf="@+id/button_a"
        app:layout_constraintTop_toBottomOf="@+id/button_a"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="G"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/button_fs"
        app:layout_constraintRight_toRightOf="@+id/button_fs"
        app:layout_constraintTop_toBottomOf="@+id/button_fs"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button_ds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="D#"
        app:layout_constraintLeft_toLeftOf="@+id/button_d"
        app:layout_constraintRight_toRightOf="@+id/button_d"
        app:layout_constraintTop_toBottomOf="@+id/button_d"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="D"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/button_cs"
        app:layout_constraintRight_toRightOf="@+id/button_cs"
        app:layout_constraintTop_toBottomOf="@+id/button_cs"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button_cs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="C#"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button_fs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        android:text="F#"
        app:layout_constraintLeft_toLeftOf="@+id/button_f"
        app:layout_constraintRight_toRightOf="@+id/button_f"
        app:layout_constraintTop_toBottomOf="@+id/button_f"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
        android:id="@+id/button_mary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="24dp"
        android:text="Mary Had a Little Lamb"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintLeft_toLeftOf="@+id/button_e"
        app:layout_constraintRight_toRightOf="@+id/button_e"
        app:layout_constraintTop_toBottomOf="@+id/button_e"
        style="@style/Widget.AppCompat.Button.Borderless"/>

    <NumberPicker
        android:id="@+id/numberPicker_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:descendantFocusability="blocksDescendants"
        android:focusedByDefault="false"
        android:keyboardNavigationCluster="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <NumberPicker
        android:id="@+id/numberPicker_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:descendantFocusability="blocksDescendants"
        android:focusedByDefault="false"
        android:isScrollContainer="false"
        android:keyboardNavigationCluster="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        style="@style/Widget.AppCompat.Button.Borderless"
        />

    <Button
        android:id="@+id/button_picker_play"
        android:layout_width="36dp"
        android:layout_height="85dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="PLAY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887"
        style="@style/Widget.AppCompat.Button.Borderless"/>

</android.support.constraint.ConstraintLayout>
